{
  "expo": {
    "name": "SARVIS",
    "slug": "personal-assistant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "sarvis",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0f1e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.saideep.personalassistant",
      "entitlements": {
        "com.apple.security.application-groups": ["group.com.saideep.personalassistant"],
        "com.apple.developer.siri": true
      },
      "infoPlist": {
        "NSCameraUsageDescription": "Allow SARVIS to take photos to share with Claude",
        "NSPhotoLibraryUsageDescription": "Allow SARVIS to access your photos to share with Claude",
        "NSMicrophoneUsageDescription": "Allow SARVIS to access your microphone for voice input",
        "NSSpeechRecognitionUsageDescription": "Allow SARVIS to use speech recognition for voice input",
        "NSUserActivityTypes": ["com.saideep.personalassistant.voice"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0f1e"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.saideep.personalassistant",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "autoVerify": true,
          "data": [{"scheme": "sarvis"}],
          "category": ["android.intent.category.DEFAULT", "android.intent.category.BROWSABLE"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow SARVIS to access your photos",
          "cameraPermission": "Allow SARVIS to take photos"
        }
      ],
      "expo-notifications",
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow SARVIS to access your microphone",
          "speechRecognitionPermission": "Allow SARVIS to use speech recognition"
        }
      ],
      "react-native-android-widget",
      [
        "@bacons/apple-targets",
        {
          "appleTeamId": "REPLACE_WITH_YOUR_TEAM_ID"
        }
      ]
    ]
  }
}
